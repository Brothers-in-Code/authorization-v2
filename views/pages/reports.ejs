<!DOCTYPE html>
<html lang="en">
  <%- include('../components/head.ejs', {title: data.page_title}) %>
  <body>
    <svg width="0" height="0" class="hidden">
      <symbol
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 16 16"
        id="eye"
      >
        <path
          d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"
        ></path>
        <path
          d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"
        ></path>
      </symbol>
      <symbol
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        id="cloud-download"
      >
        <path
          d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383"
        ></path>
        <path
          d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708z"
        ></path>
      </symbol>
    </svg>
    <div id="root">
      <div class="page-layout">
        <!-- prettier-ignore -->
        <%- include('../components/nav-section.ejs') %>

        <main class="page-layout__main page-layout__section main">
          <h2><%= data.pageTitle %></h2>
          <div class="page-layout__wrapper">
            <table class="table table--reports">
              <thead>
                <tr>
                  <td colspan="4" class="table__pagination-cell">
                    <!-- prettier-ignore -->
                    <% let params = '' %>
                    <%- include('../components/pagination.ejs', 
                        {total: data.reportList.total, offset: data.reportList.offset, limit: data.reportList.limit, params} ) 
                    %>
                  </td>
                </tr>
              </thead>

              <tbody>
                <% data.reportList.reports.forEach((item) => { %>
                <% console.log(item) %>
                <tr>
                  <td class="td--fit-content">
                    <% let date = new Date(item.created_at) %> <%=
                    date.getDate().toString().padStart(2, '0') %>.<%=
                    date.getMonth().toString().padStart(2, '0') %>.<%=
                    date.getFullYear() %>
                  </td>
                  <td>
                    <div>
                      <strong><%= item.name %></strong>
                    </div>
                    <div class="text-secondary"><%= item.description %></div>
                  </td>
                  <td>
                    <button class="btn btn-icon btn-outline-primary">
                      <svg class="sprite-icon">
                        <use xlink:href="#eye"></use>
                      </svg>
                      Посмотреть отчет
                    </button>
                  </td>
                  <td>
                    <button class="btn btn-icon btn-outline-primary">
                      <svg class="sprite-icon">
                        <use xlink:href="#cloud-download"></use>
                      </svg>
                      Скачать отчет
                    </button>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
    <script src="/js/utils/data-format.js"></script>
  </body>
</html>
