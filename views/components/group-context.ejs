
<aside
  class="page-layout__context page-layout__section context slide-section"
  id="context"
>
  <button class="btn btn--toggle context__btn-toggle" id="context-btn-toggle">
    <img
      class="slide-section__btn-img"
      src="/img/bootstrap-icons/chevron-double-right.svg"
      alt="кнопка открытия и закрытия контекстного меню"
    />
  </button>
  <div class="slide-section__overlay"></div>
  <form
    class="form form--vertical"
    method="post"
    accept-charset="utf-8"
    url=`./?offset=${offset}&limit=${limit}`
  >
    <fieldset>
      <legend>Добавить группу</legend>
      <label>
        <div>id или короткое имя сообщества</div>
        <input class="form-control" type="text" name="addGroupByIdOrDomain" />
      </label>
    </fieldset>
    <button class="btn btn-primary form__submit" type="submit">Добавить</button>
  </form>
</aside>

<script defer src="/js/toggle-context.js"></script>
