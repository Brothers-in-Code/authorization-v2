<!-- 
/**
* @params 
* total:number
* offset: number
* limit: number
*/ 
-->
<div class="pagination">
  <ul class="pagination__list">
    <% let limit = 20 %> <% for (let i = 0; i < Math.ceil(total / limit); i++)
    {%>
    <li class="pagination__item">
      <a
        class="link <%= offset === i * limit ? 'link--active' : '' %>"
        href="?offset=<%= i * limit %>&limit=<%= limit %>"
        ><%= i+1 %></a
      >
    </li>
    <% }%>
  </ul>
</div>
