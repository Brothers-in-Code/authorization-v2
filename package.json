{
  "name": "touch-authorization-v2",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "scan": "npm run build && node dist/scan.main",
    "build": "nest build",
    "build:scss": "sass --watch public/styles/styles.scss public/styles/styles.css",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "serve": "browser-sync start --config browsersync-config.json",
    "dev": "npm-run-all --parallel start:dev build:scss serve",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run build && npm run typeorm migration:generate -- src/db/migrations/migration -d src/data-source.ts --outputJs",
    "migration:up": "npm run build && npm run typeorm migration:run -- -d src/data-source.ts",
    "migration:down": "npm run build && npm run typeorm migration:revert -- -d src/data-source.ts",
    "docker:build": "npm run build && docker build -t lingvo-api .",
    "pm2:prod": "pm2 startOrRestart ecosystem.config.js --env prod"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/typeorm": "^10.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@vkid/sdk": "^2.3.2",
    "axios": "^1.6.2",
    "base64url": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "mariadb": "^3.4.0",
    "mysql2": "^3.11.4",
    "nestjs-pino": "^3.4.0",
    "npm": "^10.4.0",
    "pg": "^8.11.3",
    "pino-http": "^8.5.0",
    "qs": "^6.13.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sass": "^1.79.4",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "browser-sync": "^3.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-ejs": "^0.0.2",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-ejs": "^1.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "paths": {
      "./src/*": [
        "./src/*"
      ]
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
